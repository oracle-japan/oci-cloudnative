{
  "name": "mushop-user-service",
  "version": "1.1.0",
  "description": "MuShop Node.js Users Service",
  "author": "Oracle",
  "license": "UPL-1.0",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:docker": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run build && npm prune --production; fi",
    "schema:init": "node ./schema/init.js",
    "schema:sync": "npm run typeorm -- schema:sync",
    "schema:syncdev": "npm run typeorm:ts -- schema:sync",
    "schema:sync:dryrun": "npm run typeorm -- schema:log",
    "schema:syncdev:dryrun": "npm run typeorm:ts -- schema:log",
    "typeorm": "typeorm",
    "typeorm:ts": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:debug": "node -p \"require('./ormconfig')\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon -i node_modules -r tsconfig-paths/register src/main.ts",
    "start:sync": "npm run schema:syncdev && nodemon -i node_modules -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@digikare/nestjs-prom": "^1.0.0",
    "@godaddy/terminus": "^4.12.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^7.5.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjsx/crud": "^4.6.2",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "morgan": "^1.10.0",
    "oracledb": "^6.7.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "22.10.2",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "6.0.2",
    "jest": "29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
